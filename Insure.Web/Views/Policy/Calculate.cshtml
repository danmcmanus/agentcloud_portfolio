@model Insure.Web.Models.Policy

@{
    ViewBag.Title = "Calculate";
}



<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Calculator</h2>
            <form id="calculatorForm" method="post">
                <div class="row">
                    <div class="form-group">
                        <input type="text" name="firstNumber" value="" />
                    </div>
                    <div class="form-group">
                        <input type="text" name="secondNumber" value="" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Calculate" />
                    </div>
                </div>

                <div class="row">
                    Result: <span></span>
                </div>
            </form>
        </div>
    </div>
</div>

